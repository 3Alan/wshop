.page-container {
  height: 100%;
  background: #f2f2f2;
}
.content-container {
  background: #fff;
}
.title {
  padding: 30rpx;
  font-size: 32rpx;
}
.price {
  padding: 30rpx;
  display: flex;
  align-items: center;
}
.password {
  display: flex;
  padding: 30rpx 30rpx 30rpx 60rpx;
