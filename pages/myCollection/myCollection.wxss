.page-container {
  background: var(--white-color-border);
  height: 100%;
}
.card-container {
  position: relative;
  width: 100%;
  height: 240rpx;
  overflow: hidden;
  transition: all 0.2s ease-in-out;
}
.delete-btn {
  display: inline-block;
  position: absolute;
  right: 0;
  z-index: 3;
  color: #fff;
  background: var(--blue-color);
  height: 100%;
  margin-top: 10rpx;
  padding: 28rpx;
  box-sizing: border-box;
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.good-card {
  background: #fff;
  padding: 20rpx 30rpx 20rpx 20rpx;
  display: flex;
  font-size: 28rpx;
  margin: 10rpx 0;
  position: absolute;
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  z-index: 9;
  transition: left 0.2s ease-in-out;
}
.good-card .good-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.good-card .good-info .good-info-top {
  font-size: 32rpx;
  color: #888;
  display: inline-flex;
  justify-content: space-between;
}
.good-card .good-info .good-info-top .good-name {
  flex: 1;
}
.good-card .good-info .good-info-bottom {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.good-card .good-info .good-info-bottom .good-price {
  font-size: 32rpx;
  font-weight: bold;
}
.good-card image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 15rpx;
}