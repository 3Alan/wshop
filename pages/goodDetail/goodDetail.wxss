.page-container {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.content-container {
  flex: 1;
  overflow: scroll;
}
.banner-swiper {
  position: relative;
  padding-bottom: 100%;
  height: 0;
  box-sizing: border-box;
  overflow: hidden;
}
.swiper{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  height: auto;
}
.banner-swiper image {
  width: 100%;
  height: 100%;
}
.good-name, .good-price {
  padding: 10rpx 40rpx;
  font-size: 42rpx;
  text-align: center;
}
.good-price {
  font-weight: bold;
}
.good-price text{
  font-size: 32rpx;
}
.bottomBtn {
  width: 100%;
  display: flex;
  height: 120rpx;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #f2f2f2;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}
.collect {
  padding-left: 5rpx;
  display: flex;
  align-items: center;
}
.collect i {
  font-size: 42rpx;
  margin-right: 10rpx;
}
.collect i.icon-collect {
  color: var(--light-blue-color);
}
.button {
  margin-right: 50rpx;
}
.purchase {
  width: 60%;
  padding: 25rpx;
  color: #fff;
  font-size: 32rpx;
}
.cell {
  padding: 30rpx;
  border-top: 1rpx solid #f2f2f2;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}
.righ-content-text {
  margin-right: 5rpx;
}
.purchase-rules {
  padding: 30rpx;
  font-size: 28rpx;
}
.rules-title {
  font-weight: bold;
  font-size: 32rpx;
  padding-bottom: 30rpx;
}
.purchase-rules .paragraph {
  margin-bottom: 40rpx;
}
.emphasis {
  font-weight: bold;
}
.size-box .good-detail {
  padding: 30rpx;
  display: flex;
  align-items: center;
  background: #fff;
}
.size-box .good-detail text {
  font-size: 28rpx;
  font-weight: bold;
}
.size-box .good-detail .box-good-price {
  font-size: 40rpx;
  font-weight: bold;
  flex: 1;
}
.size-box .good-detail image{
  width: 200rpx;
  height: 200rpx;
}
.size-box .size{
  background: #f2f2f2;
  display: flex;
  flex-wrap: wrap;
  padding: 35rpx 35rpx 0 35rpx;
  overflow: scroll;
}
.size-box .size .size-botton{
  width: 150rpx;
  height: 90rpx;
  background: #fff;
  margin: 0 22rpx 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}
.size-box .size .size-botton.size-selected{
  border: 1rpx solid var(--blue-color);
}
.close-box {
  font-size: 50rpx;
}
.box-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 999;
}
.size-box {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 60%;
  position: fixed;
  bottom: 0;
  left: 0;
  overflow: hidden;
  z-index: 999;
  background: #f2f2f2;
}