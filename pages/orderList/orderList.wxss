.page-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  background: var(--white-color-border);
}
.content-container {
  flex: 1;
  overflow: scroll;
}
.good-card {
  background: #fff;
  padding: 20rpx 30rpx 20rpx 20rpx;
  display: flex;
  font-size: 28rpx;
  margin: 20rpx 15rpx;
  border-radius: 10rpx;
}
.good-card .good-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.good-card .good-info .good-info-top {
  font-size: 32rpx;
  color: #888;
  display: inline-flex;
  justify-content: space-between;
}
.good-card .good-info .good-info-top .good-name {
  flex: 1;
}
.good-card .good-info .good-info-top .handler-btn{
  font-size: 22rpx;
  width: 85rpx;
  padding: 5rpx 10rpx;
  border: 1rpx solid var(--blue-color);
  color: var(--blue-color);
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 25rpx;
}
.good-card .good-info .good-info-bottom {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.good-card .good-info .good-info-bottom .good-price {
  font-size: 32rpx;
  font-weight: bold;
}
.good-card image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 15rpx;
}
.cataItems {
  height: 60rpx;
  padding: 0 0 10rpx 0;
  width: 100%;
  display: inline-flex;
  font-size: 28rpx;
  background: #fff;
  border-bottom: 5rpx solid var(--white-color-border);
}
.cataItem {
  display: inline-block;
  padding: 0 20rpx;
  line-height: 60rpx;
  font-weight: bold;
  color: var(--grey-fontcolor);
  position: relative;
  flex: 1;
  text-align: center;
}
.cataItem.active{
  color: var(--orange-color);
}
.cataItem.active:after{
  content: '';
  position: absolute;
  bottom: 0;
  left: 50rpx;
  right: 50rpx;
  height: 6rpx;
  background-color: var(--blue-color);
  border-radius: 4rpx;
}