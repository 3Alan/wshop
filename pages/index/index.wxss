.banner-swiper {
  position: relative;
  padding-bottom: 100%;
  height: 0;
  box-sizing: border-box;
  overflow: hidden;
}
.swiper{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  height: auto;
}
.banner-swiper image {
  width: 100%;
  height: 100%;
}
.content-container {
  padding: 20rpx;
}
.recommendTitle {
  font-size: 38rpx;
  font-weight: bold;
  margin: 15rpx 0 30rpx 0;
}
.recommendItem {
  position: relative;
  margin-bottom: 20rpx;
}
.recommendItem image{
  width: 100%;
  border-radius: 15rpx;
}
.recommendBtn {
  position: absolute;
  bottom: 50rpx;
  right: 20rpx;
  border-radius: 40rpx;
  opacity: 0.8;
  font-size: 30rpx;
  font-weight: normal;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 210rpx !important;
}